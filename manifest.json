{
  "name": "DJ7NTs dxheat2flrig",
  "description": "Click on QRG at DXHeat and control ur flrig",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://dxheat.com/*",
        "http://localhost/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["bg.js"]
  },
    "manifest_version": 2
}
