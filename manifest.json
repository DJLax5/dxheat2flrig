{
  "name": "DJ7NTs dxheat2flrig",
  "description": "Click on QRG at DXHeat and control ur flrig",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://dxheat.com/*",
        "https://pota.app/*",
        "https://[cloudlog_url]",
        "http://localhost/:*",
        "http://127.0.0.1/:*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "bg.js",
    "type": "module"
  },
  "host_permissions": [
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost;  object-src http://localhost;"
  },
  "manifest_version": 3
}
